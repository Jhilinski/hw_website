[Unit]
Description=Gunicorn instance to serve your hello Flask app with SocketIO
After=network.target

[Service]
User=joey
Group=www-data
WorkingDirectory=/media/joey/500gb/python_projects/flasker
Environment="PATH=/media/joey/500gb/python_projects/flasker/myenv/bin"
ExecStart=/media/joey/500gb/python_projects/flasker/myenv/bin/gunicorn --worker-class eventlet --workers 1 --bind 0.0.0.0:8000 wsgi:app
Restart=on-failure

[Install]
WantedBy=multi-user.target